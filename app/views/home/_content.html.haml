.btn.btn-secondary.btn-cool
  =link_to "Party Shuffle", :action => "index"

.div{style: "display:flex; flex-direction: column; align-items: center; padding-top: 10px"}
  .div{style: "width: 75vw;"}
    - @emissions.each do |emission|
      .div
        =link_to emission.link do
          .div{style: "padding: 20px 0; border-bottom: 1px solid #dee3e6"}
            .h4.cool_party{style: "font-family: Avenir Next Bold"}=emission.title
            .p{style: "font-family: Avenir Next Bold;"}
              =emission.date.strftime("%d %b. %Y")
              -# xxx REMOVE TRUNCATE FOR READ MORE
            .p{style: "font-family: Avenir Next Regular; font-weight: 300; font-size: 1.2em; white-space: pre-line;"}=emission.description.truncate(400)
